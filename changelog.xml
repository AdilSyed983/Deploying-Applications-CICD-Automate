  <!-- 3 - create employee table -->
  <changeSet id="3-create-employee" author="auto">
    <createTable tableName="employee">
      <column name="emp_id" type="INT">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="emp_name" type="VARCHAR(100)">
        <constraints nullable="false"/>
      </column>
      <column name="job_title" type="VARCHAR(50)"/>
      <column name="salary" type="NUMERIC(10,2)"/>
      <column name="dept_id" type="INT"/>
    </createTable>
  </changeSet>

  <!-- 4 - FK constraint -->
  <changeSet id="4-add-fk" author="auto">

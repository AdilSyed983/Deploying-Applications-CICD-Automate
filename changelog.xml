<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Changeset for Department table -->
    <changeSet id="1-create-department" author="fyzaan">
        <createTable tableName="department">
            <column name="dept_id" type="INT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="dept_name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="location" type="VARCHAR(50)"/>
        </createTable>
    </changeSet>

    <!-- Changeset for Employees table -->
    <changeSet id="2-create-employees" author="fyzaan">
        <createTable tableName="employees">
            <column name="emp_id" type="INT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="emp_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="department_id" type="INT">
                <constraints nullable="false" foreignKeyName="fk_emp_dept"
                             referencedTableName="department" referencedColumnNames="dept_id"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Example Data Insert (optional for tests) -->
    <changeSet id="3-insert-sample-dept" author="fyzaan" runOnChange="true">
        <insert tableName="department">
            <column name="dept_id" valueNumeric="1"/>
            <column name="dept_name" value="IT"/>
            <column name="location" value="Bangalore"/>
        </insert>
    </changeSet>

    <changeSet id="4-insert-sample-employee" author="fyzaan" runOnChange="true">
        <insert tableName="employees">
            <column name="emp_id" valueNumeric="100"/>
            <column name="emp_name" value="John Doe"/>
            <column name="department_id" valueNumeric="1"/>
        </insert>
    </changeSet>

</databaseChangeLog>
